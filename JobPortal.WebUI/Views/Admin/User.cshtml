@model JobPortal.WebUI.Models.User
@{
    Layout = "_Layout_Admin";
    ViewData["Title"] = "User management Page";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>User ID</th>
            <th scope="col">User Name</th>
            <th scope="col">User Email</th>
            <th>&nbsp;&nbsp;  <b>Action</b></th>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in (List<User>)ViewData["user-list"])
        {

        <tr>
            <th scope="row">@user.UserID</th>
            <td>@user.UserName</td>
            <td>@user.UserEmail</td>
            <td>
                <a type="button" class="btn btn-danger" asp-action="RemoveMessage" asp-route-id="@user.UserEmail">
                    Remove
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                    </svg>
                </a>
            </td>
        </tr>

        }
    </tbody>
</table>
