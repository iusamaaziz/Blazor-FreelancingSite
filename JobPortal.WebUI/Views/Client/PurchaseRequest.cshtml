@model PurchaseRequestForm

@{
    ViewData["Title"] = " Make A Purchase Request";
}

 <h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-12 col-md-6 col-lg-4 mx-auto">
        <section>
            <form asp-controller="Client" asp-action="PurchaseRequest" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="@Model.RequestDescription"></label>
                    <textarea asp-for="@Model.RequestDescription" class="form-control"></textarea>
                    <span asp-validation-for="@Model.RequestDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.RequestCategory"></label>
                    <input asp-for="@Model.RequestCategory" class="form-control" />
                    <span asp-validation-for="@Model.RequestCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.RequestOfferCount"></label>
                    <input asp-for="@Model.RequestOfferCount" class="form-control">
                    <span asp-validation-for="@Model.RequestOfferCount" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="@Model.RequestDuration"></label>
                    <input type="number" asp-for="@Model.RequestDuration" class="form-control">
                    <span asp-validation-for="@Model.RequestDuration" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.RequestBudget"></label>
                    <input type="number" asp-for="@Model.RequestBudget" class="form-control">
                    <span asp-validation-for="@Model.RequestBudget" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="@Model.RequestDate"></label>
                    <input type="date" asp-for="@Model.RequestDate" class="form-control" />
                    <span asp-validation-for="@Model.RequestDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
           

        </section>
    </div>
</div>

