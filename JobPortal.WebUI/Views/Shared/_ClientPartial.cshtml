

@using Microsoft.AspNetCore.Identity
@using JobPortal.WebUI.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Client" asp-action="Dashboard">DashBoard</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Client" asp-action="RequestForm">Make A Request</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Client" asp-action="PurchaseRequest">RequestList </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
        </li>
    }
    else
    {
        <li class="nav-item text-light">
            <a class="nav-link d-inline-block text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a> /
            <a class="nav-link d-inline-block text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
