@model GIG
<div class="col-12 p-2">
    <div class="text-right my-3">
        <button class="btn btn-success">Place Order</button>
    </div>
    <div class="card">
        <div class="card-body">
            <h3 class="card-title my-2">@Model.Title</h3>
            <small><img class="rounded-circle" src="~/img/@Model.user.ImageUrl" width="20" height="20" /> @Model.user.UserName</small>
            <h6 class="m-0 text-right">$ @Model.Pricing / @Model.PriceUnit</h6>
        </div>
        <hr />
        <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="@Model.Title">
        <hr />
        <div class="card-body">
            @Model.Description
        </div>
    </div>
</div>
