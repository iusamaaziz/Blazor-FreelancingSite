@model PurchaseRequestForm
<div class="col-12 p-2">
    <div class="text-right my-3">
        <button class="btn btn-success">Request Job</button>
    </div>
    <div class="card">
        <div class="card-body">
            <h3 class="card-title my-2">@Model.RequestSubject</h3>
            <a href="" class="text-dark btn-link">
                <small><img class="rounded-circle" src="~/img/@Model.user.ImageUrl" width="20" height="20" /> @Model.user.UserName</small>
            </a>
            <h6 class="m-0 text-right">$ @Model.RequestBudget</h6>
        </div>
        <hr />
        <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="@Model.RequestSubject">
        <hr />
        <div class="card-body">
            @Model.RequestDescription
        </div>
    </div>
</div>
