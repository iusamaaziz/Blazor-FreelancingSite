@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    @foreach (Category cat in (List<Category>)ViewData["category-list"])
    {
        <div class="col-12 col-md-4 col-lg-3 p-2">
            <a href="/">
                <div class="card">
                    <img class="card-img-top" src="~/img/@cat.ImageUrl" />
                    <div class="card-body text-center p-2 bg-dark text-light">
                        <h3>@cat.Name</h3>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
