@page
@model JobPortal.WebUI.Areas.Identity.Pages.Account.UpdateProfileModel
@{
    ViewData["Title"] = "Update Profile";
}

<h1>@ViewData["Title"]</h1>
<div>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="file-field">
                <div class="mb-4">
                    <img src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                         class="rounded mx-auto d-block  rounded-circle avatar-pic " alt="example placeholder avatar">
                </div>
                <div class="d-flex justify-content-center">
                    <div class="btn btn-mdb-color btn-rounded float-left">
                        <span>Add photo</span>
                        <input type="file" asp-for="Input.Image">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="form-group col-4">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="Input.Phone"></label>
                <input asp-for="Input.Phone" class="form-control" />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>



            <div class="form-group col-4">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

        </div>

        <div class="row">

            <div class="form-group col-4">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group col-4">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

        </div>
        <div>
            <label asp-for="Input.Gender"></label><br />
            &nbsp;&nbsp;&nbsp;&nbsp;
            <input type="checkbox" asp-for="Input.Gender" class="form-check-input" />Male
            &nbsp; &nbsp;&nbsp;&nbsp;
            <input type="checkbox" asp-for="Input.Gender" class="form-check-input" />Female

            <span asp-validation-for="Input.Gender" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>

