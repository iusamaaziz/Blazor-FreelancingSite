@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4>Create a new account.</h4>
<div class="row">

    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="col-12 col-md-8 mx-auto" enctype="multipart/form-data">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-12 col-md-4 mx-auto">
                <div class="mb-4">
                    <img  src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                         class="rounded mx-auto  rounded-circle avatar-pic w-100" alt="Avatar"  >
                </div>
                <div class="text-left">
                    <div class="btn btn-mdb-color btn-rounded">
                        <input type="file" asp-for="Input.Image">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-12 col-md-6">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="form-group col-12 col-md-6">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group  col-12 col-md-6">
                <label asp-for="Input.Phone"></label>
                <input asp-for="Input.Phone" class="form-control" />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>



            <div class="form-group  col-12 col-md-6">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

        </div>

        <div class="row">

            <div class="form-group  col-12 col-md-6">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group  col-12 col-md-6">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

        </div>


        <div>
            <label asp-for="Input.Gender"></label><br />
            &nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" asp-for="Input.Gender" value="Male" class="form-check-input" />Male
            &nbsp; &nbsp;&nbsp;&nbsp;
            <input type="radio" asp-for="Input.Gender" value="Female" class="form-check-input" />Female

            <span asp-validation-for="Input.Gender" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Register</button>




    </form>
</div>

       


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
