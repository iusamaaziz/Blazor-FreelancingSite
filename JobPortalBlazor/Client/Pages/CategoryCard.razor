<div class="col-12 col-sm-6 col-md-4 col-lg-3 p-2">
    <div class="card">
        <a href="category/@category.ID">
            <img src="/img/@category.ImageUrl" class="card-img-top" />
            <div class="card-body">
                @category.Name
            </div>
        </a>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="card-footer">
                    <button @onclick="@(()=> { UpdateEvent.InvokeAsync(category); })" class="btn btn-info">Update</button>
                    <button @onclick="@(()=> { DeleteEvent.InvokeAsync(category); })" class="btn btn-danger">Delete</button>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</div>
@code {
    [Parameter]
    public Category category { get; set; }
    [Parameter]
    public Boolean isAdmin { get; set; }
    [Parameter]
    public EventCallback<Category> UpdateEvent { get; set; }
    [Parameter]
    public EventCallback<Category> DeleteEvent { get; set; }
}
